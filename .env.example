# Configuración para la API REST de WooCommerce
# Copia este archivo a .env y completa con tus valores reales

# URL base de tu sitio WordPress (sin /wp-json al final)
WC_BASE_URL=https://valenciadrip.com

# Claves de la API REST de WooCommerce
# Puedes obtenerlas en: WordPress Admin > WooCommerce > Configuración > Avanzado > REST API
CONSUMER_KEY=ck_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
CONSUMER_SECRET=cs_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Tamaño de página de resultados (WooCommerce permite hasta 100)
PER_PAGE=100

# Si quieres ocultar categorías sin productos, cambia a True
HIDE_EMPTY=False

# Número máximo de reintentos en caso de error (opcional, por defecto 3)
MAX_RETRIES=3

# Tiempo de espera entre reintentos en segundos (opcional, por defecto 2.0)
RETRY_DELAY=2.0
